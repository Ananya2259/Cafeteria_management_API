<html>
  <head>
    <title>CafeteriaManagement</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
  </head>

  <body id="body-pd">
<div style="margin-top:5%;width:200px;margin-left: auto">
  <% if flash[:error] %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong><%= flash[:error] %></strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
  <% end %>

  <% if flash[:success] %>
   <div class="alert alert-success alert-dismissible fade show" role="alert">
      <strong><%= flash[:success] %></strong>
           <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
           </div>
  <% end %>
  </div>

  <div style="margin-top:10%">  <%= yield %> <div>
<% if @current_user %>
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div> <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">BBBootstrap</span> </a>
                <div class="nav_list">
                    <%= link_to main_index_path, class: "nav_link active", method: :get do %>
                    <i class="bx bx-grid-alt nav_icon"></i><span class="nav_name">Dashboard</span>
                    <% end %>
                    <% if @current_user.role == "Admin" %>
                          <%= link_to users_path, class: "nav_link", method: :get do %>
                          <i class="fas fa-people-arrows nav_icon"></i><span class="nav_name">Users</span>
                          <% end %>
                          <%= link_to menu_categories_path, class: "nav_link", method: :get do %>
                          <i class="fas fa-utensils nav_icon"></i><span class="nav_name">
                          Menu Categories</span>
                           <% end %>
                    <% end %>
                      <% if @current_user.role != "Admin" %>
                          <%= link_to main_menu_index_path, class: "nav_link", method: :get do %>
                          <i class="fas fa-cocktail nav_icon"></i><span class="nav_name">Menu details</span>
                          <% end %>
                            <% if @current_user.role != "clerk" %>
                              <%= link_to edit_profile_path, class: "nav_link", method: :get do %>
                              <i class="fas fa-user-edit nav_icon"></i><span class="nav_name">Edit Profile</span>
                              <% end %>
                            <% end %>
                      <% end %>
                        <%= link_to orders_index_path, class: "nav_link", method: :get do %>
                    <i class="fas fa-file-invoice nav_icon"></i><span class="nav_name">Orders</span>
                    <% end %>
              </div>

            </div>
              <%= link_to destroy_session_path, class: "nav_link", method: :delete do %>
                    <i class="bx bx-log-out nav_icon"></i><span class="nav_name">SignOut</span>
              <% end %>
        </nav>
    </div>
    <% end %>
</body>
</html>
<script>



<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css">

<script src="https://kit.fontawesome.com/0d098bd6e3.js" crossorigin="anonymous"></script>
</script>
