<h1> Hourly Sales report</h1>
<div class="shadow p-3 mb-5 bg-body rounded">
<%= line_chart Order.group_by_hour(:created_at).count %>
</div>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"></script>

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
<div class="container mt-5">

    <div class="col-md-8">
        <div class="p-3 bg-white rounded">
            <% Order.order_display(@current_user.id).each do |order| %>
            <div class="row" >
                <div class="col-md-6">
                    <h1 class="text-uppercase">Invoice</h1>
                    <div class="billed"><span class="font-weight-bold text-uppercase">Date:</span><span class="ml-1"><%= order.created_at.strftime("%d/%m/%Y") %></span></div>
                    <div class="billed"><span class="font-weight-bold text-uppercase">Order ID:</span><span
                            class="ml-1"><%= order.id %></span></div>
                    <div class="billed"><span class="font-weight-bold text-uppercase">Address:</span><span
                            class="ml-1"><%= order.address %></span></div>
                </div>
                 <div class="col-md-6 text-right mt-3">

                     <% if User.define_role(session[:current_user_id]) && order.status == "pending" %>
                        <%= form_with url: orders_update_path(order_id: order.id), method: "patch" do %>
                        <%= submit_tag "pending", class: "btn btn-outline-danger" %>
                        <% end %>
                     <% else %>
                        <div class="billed"><h1 class = "text-danger mb-0"><%= order.status %></h1></div>
                     <% end %>
                </div>
            </div>
            <div class="mt-3">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% order.order_items.each do |orderitems| %>
                            <tr>
                                <td><%= orderitems.menu_item_name %></td>
                                <td><%= orderitems.quantity %></td>
                                <td><%= orderitems.price %></td>
                                <td><%= orderitems.quantity * orderitems.price %></td>
                            </tr>
                            <% end %>
                        </tbody>

                    </table>
                        <hr>
                </div>
            </div>
         <% end %>
        </div>
    </div>
</div>
